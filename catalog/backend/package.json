{
    "name": "personalized-bot-backend",
    "version": "1.0.0",
    "description": "Backend for personalized bot web application",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "migrate": "node scripts/run-all-migrations.js",
        "migrate:down": "node-pg-migrate down -f migrate-config.js",
        "migrate:products": "node scripts/run-migration.js",
        "migrate:role-system": "node scripts/run-migration.js",
        "reset:rate-limit": "node scripts/reset-rate-limit.js",
        "set-admin": "node scripts/set-admin-role.js",
        "init-jwt-keys": "tsx scripts/init-jwt-keys.ts",
        "test-auth": "node scripts/test-auth.js",
        "seed:products": "tsx scripts/seed-products.ts",
        "test": "jest",
        "lint": "eslint src --ext .ts"
    },
    "keywords": [
        "bot",
        "personalized",
        "ai",
        "fastify"
    ],
    "author": "",
    "license": "ISC",
    "overrides": {
        "glob": "^11.0.4"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.1",
        "@fastify/jwt": "^9.0.1",
        "@fastify/multipart": "^9.0.1",
        "@fastify/rate-limit": "^10.0.1",
        "@fastify/websocket": "^11.0.1",
        "@gsnake/shared-types": "file:../packages/shared-types",
        "axios": "^1.7.9",
        "bcrypt": "^5.1.1",
        "cheerio": "^1.1.2",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.0",
        "google-auth-library": "^9.0.0",
        "ioredis": "^5.4.2",
        "jsonwebtoken": "^9.0.2",
        "mammoth": "^1.11.0",
        "node-pg-migrate": "^7.6.1",
        "openai": "^4.77.3",
        "pdf-parse": "^2.4.5",
        "pg": "^8.13.1",
        "rss-parser": "^3.13.0",
        "tsx": "^4.19.2",
        "uuid": "^11.0.3",
        "validator": "^13.11.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cheerio": "^0.22.35",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.2",
        "@types/pdf-parse": "^1.1.5",
        "@types/pg": "^8.11.10",
        "@types/uuid": "^10.0.0",
        "@types/validator": "^13.11.0",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "eslint": "^9.17.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.7.2"
    }
}
