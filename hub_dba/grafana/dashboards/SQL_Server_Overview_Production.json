            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${datasource}"
                    },
                    "editorMode": "code",
                    "expr": "(\n  ((sum by(hostname, environment, role, instance) (mssql_connections{environment=~\"$environment\"}) > bool 500) * 2 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((rate(mssql_deadlocks_total{environment=~\"$environment\"}[5m]) > bool 0.1) * 3 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((mssql_blocking_session_count{environment=~\"$environment\"} > bool 10) * 2 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((mssql_agent_status{environment=~\"$environment\"} == bool 0) * 5 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((mssql_long_running_queries{environment=~\"$environment\"} > bool 5) * 2 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((mssql_page_life_expectancy_seconds{environment=~\"$environment\"} < bool 300) * 2 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((count by(hostname, environment, role, instance) (mssql_backup_status{environment=~\"$environment\", backup_type=\"Full\"} != 1) > bool 0) * 1 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n  + on(hostname, environment, role, instance) ((count by(hostname, environment, role, instance) (mssql_database_state{environment=~\"$environment\"} != 0) > bool 0) * 3 or on(hostname, environment, role, instance) (mssql_uptime_seconds{environment=~\"$environment\"} * 0))\n)",
                    "format": "table",
                    "instant": true,
                    "range": false,
                    "refId": "A"
                }
            ],
            "title": "ðŸ–¥ï¸ SQL Server Health Score - All Instances",
